{
    "$schema": "https://schemas.wp.org/wp/6.1/theme.json",
    "version": 2,
    "settings": {
        "appearanceTools": true,
        "color": {

        },
        "layout": {
            "contentSize": "1000px",
            "wideSize": "1100px"
        },
        "spacing": {
            "units": [
                "%",
                "em",
                "rem",
                "vh",
                "vw"
            ]
        },
        "typography": {
            "customFontSize": true,
            "fontFamilies": [
                {
                    "fontFace": [
                        {
                            "fontDisplay": "block",
                            "fontFamily": "Oswald",
                            "fontStretch": "normal",
                            "fontStyle": "normal",
                            "fontWeight": "300", 
                            "src": [
                                "file:./assets/fonts/Oswald/static/Oswald-Light.ttf"
                            ]
                        },
                        {
                            "fontDisplay": "block",
                            "fontFamily": "Oswald",
                            "fontStretch": "normal",
                            "fontStyle": "normal",
                            "fontWeight": "400", 
                            "src": [
                                "file:./assets/fonts/Oswald/static/Oswald-Regular.ttf"
                            ]
                        },
                        {
                            "fontDisplay": "block",
                            "fontFamily": "Oswald",
                            "fontStretch": "normal",
                            "fontStyle": "normal",
                            "fontWeight": "500", 
                            "src": [
                                "file:./assets/fonts/Oswald/static/Oswald-Medium.ttf"
                            ]
                        },
                        {
                            "fontDisplay": "block",
                            "fontFamily": "Oswald",
                            "fontStretch": "normal",
                            "fontStyle": "normal",
                            "fontWeight": "700", 
                            "src": [
                                "file:./assets/fonts/Oswald/static/Oswald-Bold.ttf"
                            ]
                        }
                    ],
                    "fontFamily": "Oswald",
                    "name": "Oswald",
                    "slug": "oswald"
                },
                {
                    "fontFace": [
                        {
                            "fontDisplay": "block",
                            "fontFamily": "Quattrocento",
                            "fontStretch": "normal",
                            "fontStyle": "normal",
                            "fontWeight": "400", 
                            "src": [
                                "file:./assets/fonts/Quattrocento/Quattrocento-Regular.ttf"
                            ]
                        },
                        {
                            "fontDisplay": "block",
                            "fontFamily": "Quattrocento",
                            "fontStretch": "normal",
                            "fontStyle": "normal",
                            "fontWeight": "700", 
                            "src": [
                                "file:./assets/fonts/Quattrocento/Quattrocento-Bold.ttf"
                            ]
                        }
                    ],
                    "fontFamily": "Quattrocento",
                    "name": "Quattrocento",
                    "slug": "quattrocento"
                }
            ],
            "fontSizes": [
                {
                    "name": "Extra Small",
                    "size": "0.8rem",
                    "slug": "small"
                },
                {
                    "name": "Small",
                    "size": "1rem",
                    "slug": "small"
                },
                {
                    "name": "Medium",
                    "size": "1.3rem",
                    "slug": "medium"
                },
                {
                    "name": "Heading 1",
                    "size": "2rem",
                    "slug": "heading1"
                },
                {
                    "name": "Heading 2",
                    "size": "1.85rem",
                    "slug": "heading2"
                },
                {
                    "name": "Heading 3",
                    "size": "1.65rem",
                    "slug": "heading3"
                },
                {
                    "name": "Heading 4",
                    "size": "1.5rem",
                    "slug": "heading4"
                },
                {
                    "name": "Heading 5",
                    "size": "1.35rem",
                    "slug": "heading5"
                },
                {
                    "name": "Heading 6",
                    "size": "1.15rem",
                    "slug": "heading6"
                }
            ]
        }
    },
    "styles": {
        "elements": {
			"h1": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--oswald)",
					"fontSize": "var(--wp--preset--font-size--heading1)",
					"lineHeight": "normal"
				}
			},
			"h2": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--oswald)",
					"fontSize": "var(--wp--preset--font-size--heading2)",
					"lineHeight": "normal"
				}
			},
			"h3": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--oswald)",
					"fontSize": "var(--wp--preset--font-size--heading3)",
					"lineHeight": "normal"
				}
			},
			"h4": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--oswald)",
					"fontSize": "var(--wp--preset--font-size--heading4)",
					"lineHeight": "normal"
				}
			},
			"h5": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--oswald)",
					"fontSize": "var(--wp--preset--font-size--heading5)",
					"lineHeight": "normal"
				}
			},
			"h6": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--oswald)",
					"fontSize": "var(--wp--preset--font-size--heading6)",
					"lineHeight": "normal"
				}
			},
			"link": {
				":active": {
					"typography": {
						"textDecoration": "none"
					}
				},
				":focus": {
					"typography": {
						"textDecoration": "none"
					}
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--accent)"
					},
					"typography": {
						"textDecoration": "none"
					}
				},
				"color": {
					"text": "var:preset|color|foreground"
				}
				
			}
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--quattrocento)",
			"fontSize": "var(--wp--preset--font-size--normal)",
			"lineHeight": "normal"
		}
    },
    "templateParts": [
        {
            "name": "header",
            "title": "Header",
            "area": "header"
        },
        {
            "name": "footer",
            "title": "Footer",
            "area": "footer"
        }
    ]

}
